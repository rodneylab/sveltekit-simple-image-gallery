{
  "name": "sveltekit-simple-image-gallery",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "Simple Svelte responsive image gallery: create a ribbon gallery, using Svelte dimension bindings to maintain the aspect ratio of all images.",
  "scripts": {
    "dev": "svelte-kit dev --port 3000",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview --port 3030",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "check": "svelte-check --fail-on-warnings",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@fontsource/inter": "^4.5.11",
    "@iconify/svelte": "^2.2.1",
    "@rodneylab/sveltekit-components": "^0.2.13",
    "@sveltejs/adapter-static": "^1.0.0-next.34",
    "@sveltejs/kit": "next",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-svelte": "^2.7.0",
    "sharp": "0.30",
    "stylelint": "^14.8.5",
    "stylelint-config-recommended": "^7.0.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.7.2",
    "vanilla-lazyload": "^17.8.2",
    "vite-imagetools": "^4.0.4"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-simple-image-gallery"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-simple-image-gallery/issues"
  }
}
